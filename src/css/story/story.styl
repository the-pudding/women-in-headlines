/* Polarity Comparison bubble chart styling */
.polarityCompyAxis text {
  font-family: $barlow;
  text-align: left;
  text-anchor: end;
  fill: $off-black;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
}

.polarityCompyAxis .domain {
    stroke:none;
}
  
.grid {
  stroke: lightgrey;
  stroke-width: 1px;
  shape-rendering: crispEdges;
}
  
.polarityCompBubbleLeft {
  fill: $off-black;
  stroke: $off-black;
  stroke-width: 2.5px;
  box-sizing: border-box;
}
  
.polarityCompBubbleRight {
  fill: $green;
  stroke: $off-black;
  stroke-width: 2.5px;
  box-sizing: border-box;
}
  
.polarityCompFemText {
  fill: $green;
